<div id="top-bar">
    <button type="button" class="toggler" @onclick="ToggleNavMenu">
        <i class="bi bi-list"></i>
    </button>
</div>

<div id="sidebarMenu" class="@NavMenuCssClass">
    <nav>
        <div class="nav-item ms-4 mt-2">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house me-2"></i> Home
            </NavLink>
            <NavLink class="nav-link mt-2" href="" Match="NavLinkMatch.All">
                <i class="bi bi-stoplights me-2"></i> Verkehr
            </NavLink>
            <NavLink class="nav-link mt-2" href="" Match="NavLinkMatch.All">
                <i class="bi bi-info-circle me-2"></i> Über
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
